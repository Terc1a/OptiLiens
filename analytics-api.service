[Unit]
Description=Analytics API Service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/home/tercia/analytics

# Прямой запуск через Python как в вашей практике
ExecStart=/home/tercia/analytics/venv/bin/python3 main2.py

# Перезапуск при ошибках
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

# Безопасность
NoNewPrivileges=yes
PrivateTmp=yes

[Install]
WantedBy=multi-user.target